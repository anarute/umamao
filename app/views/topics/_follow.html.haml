- block = local_assigns[:block]
-# Follow/unfollow topic link

- if logged_in?
  .follow-info{:class => block}
    - if topic.followers.include?(current_user)
      = link_to "#{t("followable.unfollow")}", unfollow_topic_path(topic), :class => "unfollow_link", 'data-class' => "follow_link", 'data-title' => t("followable.follow"), 'data-undo' => follow_topic_path(topic)
    - else
      = link_to "#{t("followable.follow")}", follow_topic_path(topic), :class => "follow_link", 'data-class' => "unfollow_link", 'data-title' => t("followable.unfollow"), 'data-undo' => unfollow_topic_path(topic)

